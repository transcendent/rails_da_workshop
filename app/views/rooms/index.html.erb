<p id="notice"><%= notice %></p>

<h1>Rooms</h1>

<table border="">
  <thead>
    <tr>
      <th>Name</th>
      <th>Floor</th>
      <th>Format</th>
      <th colspan="2">Administration</th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= link_to room.name, room %></td>
        <td><%= room.floor %></td>
        <td><%= room.format %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= link_to 'Remove', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

