<p id="notice"><%= notice %></p>

<h1>Fixtures</h1>

<table border="1">
  <thead>
    <tr>
      <th>Room</th>
      <th>Asset</th>
      <th>Type</th>
      <th>Notes</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @fixtures.each do |fixture| %>
      <tr>
        <td><%= fixture.room.name %></td>
        <td><%= link_to fixture.asset, fixture %></td>
        <td><%= fixture.classification %></td>
        <td><%= fixture.notes %></td>
        <td><%= link_to 'Edit', edit_fixture_path(fixture) %></td>
        <td><%= link_to 'Remove', fixture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Fixture', new_fixture_path %>
<%= link_to 'Review Rooms', rooms_url %>
