<%= form_with(model: fixture, local: true) do |form| %>
  <% if fixture.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(fixture.errors.count, "error") %> prohibited this fixture from being saved:</h2>

      <ul>
      <% fixture.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :room %>
    <%= form.collection_select :room_id, Room.order(:id), :id, :name, include_blank: false %>
  </div>

  <div class="field">
    <%= form.label :asset %>
    <%= form.text_field :asset, id: :fixture_asset %>
  </div>

  <div class="field">
    <%= form.label :classification %>
    <%= form.select :classification, (["Screen","Whiteboard","Jabra","Table"]) %>
  </div>

  <div class="field">
    <%= form.label :notes %>
    <%= form.text_area :notes, id: :fixture_note, cols: 40, rows: 5  %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
